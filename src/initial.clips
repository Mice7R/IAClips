; Initial Facts

; Volvemos con el problema de que es un libro popular
; Creo que es mejor definir la moda
; y aNadir clasicos en el sentido de libros que todo el mundo
; a leido o debe leer.

(deffacts libros-populares
  (moda libro ESTO_LIBRO_ES_POPULAR))

(deffacts autores-populares
  (moda autor SOYPOPULAR))

(deffacts generos-populares
  (moda genero Vampiros))
